<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shahzademambaccus.finalyearprojectuser.Categories">

    <include
        android:id="@+id/Tool_Bar"
        layout="@layout/tool_bar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="434dp" />


    <ScrollView
        android:id="@+id/ScrollViewCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Tool_Bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/Category_FamilyAndPeopleBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Family and People"
                android:onClick="familyAndPeopleButtonPressed"/>

            <Button
                android:id="@+id/Category_FoodAndDrinksBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food and Drinks"
                android:onClick="foodAndDrinksButtonPressed"/>

            <Button
                android:id="@+id/Category_HouseholdObjectsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Household Objects"
                android:onClick="householdObjectsButtonPressed"/>

            <Button
                android:id="@+id/Category_QuestionsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Questions"
                android:onClick="questionButtonPressed"/>

            <Button
                android:id="@+id/Category_VerbsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verbs"
                android:onClick="verbsButtonPressed"/>

            <Button
                android:id="@+id/Category_CommuicationBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Communication"
                android:onClick="communicationButtonPressed"/>


            <Button
                android:id="@+id/Category_AnimalsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Animals"
                android:onClick="animalsButtonPressed"/>

            <Button
                android:id="@+id/Category_OutdoorObjectsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Outdoor Objects"
                android:onClick="outdoorObjectsButtonPressed"/>

            <Button
                android:id="@+id/Category_ConnectivesBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connectives"
                android:onClick="connectivesButtonPressed"/>

            <Button
                android:id="@+id/Category_FeelingsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feelings"
                android:onClick="feelingsButtonPressed"/>


            <Button
                android:id="@+id/Category_SizeAndPositionBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Size and Positions"
                android:onClick="sizeAndPositionButtonPressed"/>

            <Button
                android:id="@+id/Category_RoomBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rooms"
                android:onClick="roomButtonPressed"/>

            <Button
                android:id="@+id/Category_miscellaneousBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Miscellaneous"
                android:onClick="miscellaneousButtonPressed"/>
        </LinearLayout>

    </ScrollView>

    <EditText
        android:id="@+id/Category_TranslatedTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/Category_ClearBtn"
        android:layout_toStartOf="@+id/Category_ClearBtn"
        android:ems="10"
        android:inputType="none"
        android:editable="false"
        android:layout_below="@+id/ScrollViewCategory"
        android:hint="Translated text will be here" />

    <Button
        android:id="@+id/Category_ClearBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Category_TranslatedTxt"
        android:layout_alignBottom="@+id/Category_TranslatedTxt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Clear"
        android:onClick="clearButtonPressed"/>
</RelativeLayout>

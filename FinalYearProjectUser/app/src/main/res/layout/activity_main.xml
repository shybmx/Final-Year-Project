<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shahzademambaccus.finalyearprojectuser.MainActivity">

    <Button
        android:id="@+id/textToBSLBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:gravity="left|center_vertical"
        android:onClick="textToBSLActivity"
        android:text="Text to BSL"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/BSLSymbolsToTextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textToBSLBtn"
        android:gravity="left|center_vertical"
        android:onClick="bslSymbolToText"
        android:text="BSL Symbol to text" />

    <Button
        android:id="@+id/BSLSignsToTextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/BSLSymbolsToTextBtn"
        android:gravity="left|center_vertical"
        android:onClick="bslSignsToText"
        android:text="BSL Signs To Text" />

    <Button
        android:id="@+id/previouslyVisitedSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/BSLSignsToTextBtn"
        android:gravity="left|center_vertical"
        android:onClick="previouslyVisitedSigns"
        android:text="Previously Visited Signs" />

    <TextView
        android:id="@+id/SignOfTheDayTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="30sp"
        android:text="Sign Of The Day" />

    <ImageView
        android:id="@+id/SignOfTheDayImg"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_below="@+id/SignOfTheDayTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@android:drawable/screen_background_light_transparent" />


</RelativeLayout>
